{
  "extends": "@tsconfig/node18/tsconfig.json",
  "version": "5.6.3",
  "compilerOptions": {
    "lib": ["es2021"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // The two lines below make it able for Jest to run all tests, however, will break npm run start etc.
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "./",
    "outDir": "./lib",
    "strict": false,
    "types": ["jest"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
